include ../../jam/cxxflags.jam ;

constant SRC : src/rvt ;
constant SRC_TEST : test ;

project configs
: requirements
    <include>../../src
    <include>../../src/system/linux
    <include>src

    <cxxflags>-std=c++14

    $(CXXFLAGS)

   : default-build release
;

lib libboost_unit_test : : <name>boost_unit_test_framework <link>shared ;

constant TEST_DEPENDENCIES :
    <cxxflags>-frtti
    <library>libboost_unit_test
;

import testing ;

obj screen : $(SRC)/screen.cpp ;
obj emulator : $(SRC)/emulator.cpp ;

## Tests
## @{
unit-test test_character_color : $(SRC_TEST)/test_character_color.cpp : $(TEST_DEPENDENCIES) ;
unit-test test_character : $(SRC_TEST)/test_character.cpp : $(TEST_DEPENDENCIES) ;
unit-test test_charsets : $(SRC_TEST)/test_charsets.cpp : $(TEST_DEPENDENCIES) ;

unit-test test_screen : $(SRC_TEST)/test_screen.cpp screen : $(TEST_DEPENDENCIES) ;

unit-test test_utf8_decoder : $(SRC_TEST)/test_utf8_decoder.cpp : $(TEST_DEPENDENCIES) ;


unit-test enumator : $(SRC)/main.cpp screen emulator : $(TEST_DEPENDENCIES) ;
## }
