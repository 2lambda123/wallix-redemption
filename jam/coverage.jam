#gcov -a -c -b -f -o bin/gcc-4.6/coverage/tests/test_stream.gcno bin/gcc-4.6/coverage/test_stream

constant ENABLE_COVERAGE : [ setvar coverage : no ] ;

if $(ENABLE_COVERAGE) = yes
{
    lib gcov : : <name>gcov : ;

    constant GCOV_NO_BUILD : <build>no ;

    constant GCOV :
        <cxxflags>--profile-arcs
        <cxxflags>--test-coverage
        <cxxflags>--coverage
        <cxxflags>-pg
        <linkflags>-pg
        #<link>shared
        <library>gcov
    ;
}
